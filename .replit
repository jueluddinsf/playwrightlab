run = "npm install && npm run dev"
entrypoint = "app/page.tsx"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["npm", "start"]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]

[env]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
